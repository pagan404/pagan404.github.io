<article class="article-intro">
    <a class="article-links" href="{{url}}">
        <section>
            <img class="article-image" src="{{image}}" alt="{{imageAlt}}">
            <h1 class="article-title">{{title}}</h1>
            <h3 class="article-date">{{date}}</h3>
            <p class="article-intro-paragraph">{{intro}}</p>
        </section>
    </a>
</article>

{
  "name": "pagans-blog",
  "version": "1.0.0",
  "description": "A blog website with Handlebars templating",
  "main": "build.js",
  "type": "module",
  "scripts": {
    "build": "node build.js",
    "serve": "http-server . -p 8080",
    "dev": "npm run build && npm run serve",
    "add-article": "node add-article.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage"
  },
  "jest": {
    "globals": {
      "__USE_ESM__": true
    },
    "transform": {},
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "resources/js/**/*.js",
      "!src/**/__tests__/**",
      "!resources/js/**/__tests__/**"
    ],
    "injectGlobals": true
  },
  "dependencies": {
    "handlebars": "^4.7.8"
  },
  "devDependencies": {
    "http-server": "^14.1.1",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.2.0"
  }
}
